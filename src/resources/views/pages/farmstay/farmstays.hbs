
<div class="row mt-4">
    <div class="col-md-offset-1 col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-10 col-xs-10">
                        <a href="/farmstay/create" class="btn btn-sm btn-primary pull-left"><i class="fa fa-plus-circle"></i>Thêm farmstay</a>
                        <a href = "/farmstay/trash" class="btn btn-primary position-relative">
                            <i class="fas fa-trash"></i>
                            <p class="badge badge-warning position-absolute" style="top: -4px;right: -4px;">{{total_farmstay_deleted}}</p>
                        </a>
                    </div>
                    {{!-- <div class="col-sm-2 col-xs-2">
                        <form class="form-horizontal pull-right">
                            <div class="form-group">
                                <label>Show : </label>
                                <select class="form-control">
                                    <option>5</option>
                                    <option>10</option>
                                    <option>15</option>
                                    <option>20</option>
                                </select>
                            </div>
                        </form>
                    </div> --}}

                </div>
            </div>
            
            <div class="panel-body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>#</th>
                            <th>Tên</th>
                            <th>Người quản lý</th>
                            <th>Giá thuê</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each farmstays}}
                            <tr>
                                <td>
                                    <ul class="action-list">
                                        <li><a href="#" class="btn btn-primary"><i class="fa fa-pencil-alt"></i></a></li>
                                        <li>
                                            <a data-name="{{this.name}}" data-id="{{this.id}}" href="#" class="btn btn-warning delete-farmstay" data-toggle="modal" data-target="#modalDeleteFarmstay">
                                            <i class="fas fa-trash"></i></a>
                                        </li>
                                    </ul>
                                </td>
                                <td>{{sum @index 1}}</td>
                                <td>{{this.name}}</td>
                                {{#if this.management_staff}}
                                    <td>{{this.management_staff.name}}</td>
                                {{else}}
                                    <td>Chưa có</td>
                                {{/if}}
                                
                                <td>{{this.rent_cost_per_day}}</td>
                                <td><a href="#" class="btn btn-sm btn-success"><i class="fas fa-check-circle"></i></a></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-8 col-xs-8">showing <b>{{total}}</b> out of <b>{{total_farmstay}}</b> entries</div>
                    <div class="col-sm-4 col-xs-4">
                        <ul class="pagination hidden-xs pull-right pag">
                            <li><a href="#">«</a></li>
                            {{page page 5 limit total_farmstay}}

                            <li><a href="#">»</a></li>
                        </ul>
                        {{!-- <ul class="pagination visible-xs pull-right">
                            <li><a href="#">«</a></li>
                            <li><a href="#">»</a></li>
                        </ul> --}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalDeleteFarmstay" tabindex="-1" role="dialog" aria-labelledby="modalDeleteFarmstay" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalDeleteFarmstayLabel">Bạn có muốn xóa?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning modal-title-warning" role="alert">
                        Bạn có muốn xóa <a class="alert-link"></a> không?
                    </div>
                    <form id="formDeleteFarmstay" method="POST"></form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="btnDeleteFarmstay"type="button" class="btn btn-warning">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{> js}}
<script src="/js/farmstay/manager_farmstay.js">
</script>